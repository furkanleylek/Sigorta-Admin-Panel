// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  password String
}

model Trafik {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  sahipturu    String
  kullaniciAdi String?
  tcKimlik     String?
  sirketUnvani String?
  vergiNo      String?
  pasaportNo   String?
  dogumTarihi  String

  plakaNo       String
  kullanimTarzi String
  marka         String
  modelYili     String
  ASBISno       String

  police            String
  sigortaSirketi    String?
  policeNumarasi    String?
  policeBitisTarihi String?

  adres           String?
  telefonNumarasi String
  eposta          String?
  mesaj           String?

  onaylama  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Dask {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  sahipturu    String
  kullaniciAdi String?
  tcKimlik     String?
  sirketUnvani String?
  vergiNo      String?
  pasaportNo   String?
  dogumTarihi  String

  binaInsaYili  String
  yapitarzi     String
  kullanimSekli String
  brutalan      String
  katSayisi     String
  rizikoAdresi  String
  // hasar ile ilgili pdf optional

  police            String
  sigortaSirketi    String?
  policeNumarasi    String?
  policeBitisTarihi String?

  adres           String?
  telefonNumarasi String
  eposta          String?
  mesaj           String?

  onaylama  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model FerdiKaza {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  basvuran       String
  kullaniciAdi   String?
  tcKimlik       String?
  meslek         String?
  sirketUnvani   String?
  vergiNo        String?
  faaliyetKonusu String?
  calisanSayisi  String?
  pasaportNo     String?
  dogumTarihi    String

  teminatMiktari String
  ekTeminatlar   String[]

  police            String
  sigortaSirketi    String?
  policeNumarasi    String?
  policeBitisTarihi String?

  adres           String?
  telefonNumarasi String
  eposta          String?
  mesaj           String?

  onaylama  Boolean  @default(false)
  createdAt DateTime @default(now())
}
